/// 願望清單項目
model WishlistItem {
  /// 主鍵 ID
  id        String   @id @default(cuid())
  /// 使用者 ID
  userId    String
  /// 商品 ID
  productId String
  /// 加入時間
  createdAt DateTime @default(now())
  /// 關聯商品
  product   Product  @relation(fields: [productId], references: [id])
  /// 關聯使用者
  user      Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@schema("public")
}
