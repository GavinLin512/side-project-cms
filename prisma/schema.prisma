generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

/// 使用者個人資料
model Profile {
  /// 主鍵 ID
  id            String         @id @default(cuid())
  /// Supabase Auth 使用者 ID
  userId        String         @unique @default(uuid()) @db.Uuid
  /// 使用者名稱
  name          String
  /// 購物車項目
  cartItems     CartItem[]
  /// 訂單列表
  orders        Order[]
  /// 評論列表
  reviews       Review[]
  /// 願望清單項目
  wishlistItems WishlistItem[]

  @@schema("public")
}
